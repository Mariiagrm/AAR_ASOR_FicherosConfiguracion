options {
    directory "/var/cache/bind";

    // Internos: permitimos recursion
    allow-recursion { 10.1.0.0/16; localhost; };
    allow-query-cache { 10.1.0.0/16; localhost; };

    // Externos: NO recursi√≥n
    recursion no;

    dnssec-validation auto;

    listen-on port 53 { any; };
    listen-on-v6 { none; };
};
